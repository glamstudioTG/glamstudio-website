generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  CLIENT
  WORKER
  ADMIN
}

enum BookingStatus {
  PENDING_PAYMENT
  PENDING_REVIEW
  CONFIRMED
  CANCELLED
  COMPLETED
}

enum TransactionStatus {
  PENDING
  APPROVED
  REJECTED
}

enum DayOfWeek {
  SUNDAY
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
  SATURDAY
}

model User {
  id       String  @id @default(uuid())
  name     String
  password String?
  email    String  @unique
  phone    String
  role     Role    @default(CLIENT)

  bookings Booking[]
  worker   Worker?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Worker {
  id String @id @default(uuid())

  userId String @unique
  user   User   @relation(fields: [userId], references: [id])

  isActive      Boolean   @default(true)
  deactivatedAt DateTime?
  bio           String?
  avatar        String?

  categories    WorkerCategory[]
  businessHours BusinessHours[]
  blocks        ScheduleBlock[]
  bookings      Booking[]
  overrideHours OverrideHours[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model WorkerCategory {
  id         String @id @default(uuid())
  workerId   String
  categoryId String

  worker   Worker   @relation(fields: [workerId], references: [id])
  category Category @relation(fields: [categoryId], references: [id])

  @@unique([workerId, categoryId])
}

model Service {
  id          String  @id @default(uuid())
  name        String
  description String?
  duration    Int
  price       Float
  image       String?

  categoryId String
  category   Category @relation(fields: [categoryId], references: [id])

  bookings Booking[]

  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  BookingService BookingService[]
}

model Category {
  id    String  @id @default(uuid())
  name  String  @unique
  image String?

  services         Service[]
  workerCategories WorkerCategory[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Booking {
  id String @id @default(uuid())

  userId String?
  user   User?   @relation(fields: [userId], references: [id])

  guestName  String?
  guestEmail String?
  guestPhone String?

  totalDuration Int

  workerId String
  worker   Worker @relation(fields: [workerId], references: [id])

  service           BookingService[]
  transactionProofs TransactionProof[]

  date      DateTime
  startTime Int
  endTime   Int

  status  BookingStatus @default(PENDING_PAYMENT)
  comment String?

  calendarEventId String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Service   Service? @relation(fields: [serviceId], references: [id])
  serviceId String?

  @@index([date, startTime])
  @@index([date, endTime])
  @@index([workerId, date, startTime])
}

model BookingService {
  id String @id @default(uuid())

  bookingId String
  booking   Booking @relation(fields: [bookingId], references: [id])

  serviceId String
  service   Service @relation(fields: [serviceId], references: [id])

  duration Int
  price   Float?

  @@unique([bookingId, serviceId])
}

model TransactionProof {
  id       String @id @default(uuid())
  imageUrl String

  bookingId String
  booking   Booking @relation(fields: [bookingId], references: [id])

  status TransactionStatus @default(PENDING)
  reviewedAt DateTime?
  reviewedBy String?

  uploadedAt DateTime @default(now())
}

model ScheduleBlock {
  id String @id @default(uuid())

  date      DateTime
  startTime Int?
  endTime   Int?
  reason    String?

  workerId String?
  worker   Worker? @relation(fields: [workerId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([date, startTime])
  @@index([workerId, date])
}

model BusinessHours {
  id        String    @id @default(uuid())
  day       DayOfWeek
  startTime Int
  endTime   Int

  workerId String
  worker   Worker @relation(fields: [workerId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([workerId, day])
  @@index([workerId, day])
  @@index([day, startTime])
  @@index([day, endTime])
}

model OverrideHours {
  id        String   @id @default(uuid())
  date      DateTime
  startTime Int
  endTime   Int

  workerId String?
  worker   Worker? @relation(fields: [workerId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
